<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.huskies.developer.activities.MyMenuActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    style="@style/background_style">
    <RelativeLayout
        style="@style/header_style">

        <TextView
            style="@style/header_text"
            android:text="@string/menu"></TextView>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FF0D283D">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/baloo"
                        android:padding="10dp"
                        android:text="Daily"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/from_menu_to_diary_menu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#00000000"
                        android:padding="20dp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="109dp"
                    android:layout_height="149dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/dailylogo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:background="#FF0D283D">

                <ImageView
                    android:layout_width="112dp"
                    android:layout_height="130dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/profilelogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"
                    android:text=" Profile"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/from_menu_to_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="#00000000" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FF0D283D">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:padding="25dp"
                        android:text="Dishes"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/from_menu_to_dishes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#00000000"
                        android:padding="20dp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="109dp"
                    android:layout_height="132dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dishlogo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:background="#FF0D283D">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="112dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/exerciselogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"
                    android:text=" Exercise"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/from_menu_to_exercises"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="-1dp"
                    android:backgroundTint="#00000000"
                    android:padding="20dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FF0D283D">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:padding="25dp"
                        android:text=" Statistics"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/from_menu_to_statistic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#00000000"
                        android:padding="20dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="109dp"
                    android:layout_height="132dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/statlogo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:background="#FF0D283D">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/scanlogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"
                    android:text="Scan a \nfood item"
                    android:textColor="@color/white"
                    android:textSize="23sp" />

                <Button
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="#00000000"
                    android:padding="20dp" />


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
